{
  "name": "tab-info",
  "version": "0.0.2",
  "description": "A chrome extension for surfacing embedded information in web pages in the browser toolbar",
  "homepage": "https://github.com/mike-north/tab-info-extension",
  "author": {
    "name": "Mike North",
    "email": "michael.l.north@gmail.com"
  },
  "license": "BSD-2-Clause",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "postinstall": "rimraf node_modules/public-encrypt/test/*.pem",
    "zip": "scripty",
    "build": "scripty",
    "build:types": "scripty",
    "lint": "scripty",
    "start": "scripty",
    "test": "scripty",
    "api-docs": "scripty",
    "api-surface:local": "scripty",
    "api-surface:ci": "scripty",
    "watch-prod": "scripty",
    "test:code": "scripty",
    "test:types": "scripty",
    "test:browsers": "testem ci",
    "test:watch": "testem"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@glimmer/babel-plugin-glimmer-env": "2.0.0-beta.12",
    "@glimmer/env": "0.1.7",
    "@glimmerx/babel-plugin-component-templates": "0.3.0",
    "@glimmerx/component": "0.3.0",
    "@glimmerx/core": "0.3.0",
    "@glimmerx/eslint-plugin": "^0.4.2",
    "@glimmerx/helper": "0.6.6",
    "@glimmerx/modifier": "0.3.0",
    "@microsoft/api-documenter": "^7.12.9",
    "@microsoft/api-extractor": "^7.13.2",
    "@types/chrome": "^0.0.133",
    "@types/color": "^3.0.1",
    "@types/debounce": "^1.2.0",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.20",
    "@types/qunit": "^2.9.1",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "dtslint": "^4.0.7",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "express": "^4.17.1",
    "file-loader": "^6.0.0",
    "glob": "7.1.6",
    "html-webpack-plugin": "^4.0.4",
    "jimp": "^0.16.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "qunit": "^2.9.3",
    "qunit-dom": "^1.1.0",
    "remark-cli": "^9.0.0",
    "remark-lint-are-links-valid": "^1.0.3",
    "remark-lint-code": "^2.0.0",
    "remark-lint-emoji-limit": "^1.0.1",
    "remark-preset-lint-markdown-style-guide": "^4.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "remark-validate-links": "^10.0.3",
    "rimraf": "^3.0.2",
    "scripty": "^2.0.0",
    "style-loader": "^2.0.0",
    "testem": "^3.0.3",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      "last 2 Edge versions",
      "last 2 Chrome versions",
      "last 2 Firefox versions",
      "last 2 Safari versions"
    ],
    "development": [
      "last 1 Chrome version",
      "last 1 Firefox version",
      "last 1 Safari version"
    ]
  },
  "engines": {
    "node": ">= 12.0"
  },
  "private": true,
  "volta": {
    "node": "14.15.4",
    "yarn": "1.22.10"
  },
  "dependencies": {
    "@mike-north/types": "^1.3.2",
    "@types/dompurify": "^2.2.1",
    "@types/marked": "^2.0.0",
    "color": "^3.1.3",
    "debounce": "^1.2.0",
    "debug": "^4.3.1",
    "dompurify": "^2.2.7",
    "marked": "^2.0.1"
  },
  "remarkConfig": {
    "settings": {
      "bullet": "*"
    },
    "plugins": [
      "remark-preset-lint-markdown-style-guide",
      "remark-preset-lint-recommended",
      "remark-validate-links",
      "remark-lint-code",
      "remark-lint-emoji-limit",
      "remark-lint-are-links-valid",
      [
        "remark-lint-list-item-indent",
        false
      ],
      [
        "lint-unordered-list-marker-style",
        "*"
      ],
      [
        "lint-maximum-line-length",
        false
      ],
      [
        "lint-no-consecutive-blank-lines",
        false
      ],
      [
        "lint-no-file-name-irregular-characters",
        "\\.a-zA-Z0-9-_"
      ]
    ]
  }
}
